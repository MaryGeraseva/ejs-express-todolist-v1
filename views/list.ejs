<%- include("header") -%> 

<body>
    <div class="box" id="heading">
        <h1><%= listTitle %> </h1>
    </div>
    <div class="box">
        <% for(let i = 0; i < listItems.length; i++) { %>
        <div class="item">
            <input type="checkbox">
            <p><%= listItems[i] %></p>
        </div>
        <% } %>
        <form class="item" action="/" method="post">
            <div class="input-container">
                <input type="text" name="newItem" placeholder="New Task" autocomplete="false">
            </div>
            <div class="button-container">
                <button type="submit" name="submitButton" value=<%= listTitle %> > + </button>
            </div>
        </form>
    </div>

</body>

<%-  include("footer")-%> 
